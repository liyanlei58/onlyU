<cu-custom bgColor="bg-gradual-{{skin}}">
  <view slot="content">我的</view>
</cu-custom>
<view class='margin-bottom-xxl'>

  <view class="cu-list menu card-menu menu-avatar margin-top shadow-lg radius">
    <view class="cu-item arrow" bindtap="toMeEdit">
      <view class="cu-avatar radius lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);"></view>
      <view class="content flex-sub">
        <view>凯尔</view>
        <view class="text-gray text-sm flex justify-between">
          水利万物而不争
        </view>
      </view>
    </view>
  </view>


  <view class="cu-list menu card-menu shadow-lg radius">
    <view class="cu-item arrow" bindtap="toMeEdit">
      <view class='content' bindtap="toDynamic">
        <text class="cuIcon-camerafill text-{{skin}}"></text>
        <text class="text-grey">我的动态</text>
        <text class="text-gray text-sm margin-left">爱琴海中发布的动态</text>
      </view>
    </view>
    <!-- 
    <view class="cu-item arrow" bindtap="toMeMatch">
      <view class='content'>
        <text class="cuIcon-appreciatefill text-{{skin}}"></text>
        <text class="text-grey">我的评论</text>
        <text class="text-gray text-sm margin-left">动态评论：我评论的、评论我的</text>
      </view>
    </view> -->

    <view class="cu-item arrow" bindtap="toMessage">
      <view class='content'>
        <text class="cuIcon-noticefill text-{{skin}}"></text>
        <text class="text-grey">消息中心</text>
        <text class="text-gray text-sm margin-left">心动、关注、点赞动态、评论动态</text>
      </view>
    </view>

  </view>

  <view class="cu-list menu card-menu shadow-lg radius">

    <view class="cu-item arrow" bindtap="toVisit">
      <view class='content'>
        <text class="cuIcon-group_fill text-{{skin}}"></text>
        <text class="text-grey">最近来访</text>
      </view>
    </view>

    <view class="cu-item arrow" bindtap="toLove">
      <view class='content'>
        <text class="cuIcon-likefill text-{{skin}}"></text>
        <text class="text-grey">心动</text>
        <text class="text-gray text-sm margin-left">查看对你心动的人和你心动的记录</text>
      </view>
    </view>

    <view class="cu-item arrow" bindtap="toMatch">
      <view class='content'>
        <text class="cuIcon-roundcheckfill text-{{skin}}"></text>
        <text class="text-grey">匹配</text>
        <text class="text-gray text-sm margin-left">查看互相心动的人</text>
      </view>
    </view>

    <view class="cu-item arrow" bindtap="toBrowse">
      <view class='content'>
        <text class="cuIcon-peoplefill text-{{skin}}"></text>
        <text class="text-grey">我的浏览</text>
        <text class="text-gray text-sm margin-left">我浏览的人</text>
      </view>
    </view>

    <view class="cu-item arrow" bindtap="toFollow">
      <view class='content'>
        <text class="cuIcon-favorfill text-{{skin}}"></text>
        <text class="text-grey">我的关注</text>
        <text class="text-gray text-sm margin-left">我关注的人</text>
      </view>
    </view>

  </view>


  <view class="cu-list menu card-menu shadow-lg radius">

    <view class="cu-item arrow" bindtap="toSetting">
      <view class='content'>
        <text class="cuIcon-settingsfill text-{{skin}}"></text>
        <text class="text-grey">设置</text>
        <text class="text-gray text-sm margin-left">背景设置</text>
      </view>
    </view>

    <!-- <view wx:if='{{hasAdmin}}' class="cu-item arrow" bindtap="toActivityAdmin">
      <view class='content'>
        <text class="cuIcon-appreciatefill text-{{skin}}"></text>
        <text class="text-grey">活动管理</text>
      </view>
    </view> -->

  </view>

</view>